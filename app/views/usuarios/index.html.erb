<h1>Lista Usuarios</h1>


<table class="table" cellspacing="0" width="100%">
	<thead>
		<tr>
			<!-- This is a special cell for loading statuses - see below for more -->
			<th scope="col" style="width: 20px;">ID</th>
			<th scope="col">Tipo</th>
			<th scope="col">Email</th>
			<th scope="col">Nome</th>
			<th scope="col" class="table-actions">Ações</th>
		</tr>
	</thead>
	<tfoot>
		<tr>
			<td colspan="6"><img src="images/icons/fugue/arrow-curve-000-left.png" width="16" height="16" class="picto"><b>Total:</b> <%= @usuarios_da_empresa.size %> cadastros encontrados</td>
			<!-- ><td><a href="#" class="button"><img src="images/icons/fugue/cross-circle.png" width="16" height="16"> delete all</a></td> -->
		</tr>
	</tfoot>
	<tbody>
		<% @usuarios_da_empresa.each do |usuario| %>
		<tr>
			<!-- ><th scope="row" class="table-check-cell"><input type="checkbox" name="selected[]" id="table-selected-1" value="1"></th> -->
			<td><%= usuario.id %></td>
			<td>
			<ul class="keywords">
				<li>
					<%= usuario.tipo %>
				</li>
			</ul></td>
			<td><%= usuario.username %></td>
			<td><%= usuario.nome %></td>
			
			<!-- The class table-actions is designed for action icons -->
			<td class="table-actions"> 
			<%= link_to image_tag("/images/icons/fugue/pencil.png"), edit_usuario_path(usuario), :title =>"Edit", :class => "with-tip" %>
			<%= link_to image_tag("/images/icons/fugue/cross-circle.png"), usuario, confirm: 'Tem certeza que deseja apagar o usuário ' + usuario.username + '?' , method: :delete, :title =>"Delete", :class => "with-tip" %> </td>
		</tr>
		<% end %>
	</tbody>
</table>

<br />


	

<%= link_to 'Novo usuario', new_usuario_path, :class => "button" %>
