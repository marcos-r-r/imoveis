<h1>Lista de Empresas</h1>

<table class="table" cellspacing="0" width="100%">
	<thead>
		<tr>
			<!-- This is a special cell for loading statuses - see below for more -->
			<th scope="col" style="width: 20px;">ID</th>
			<th scope="col">Empresa</th>
			<th scope="col">Logo</th>
			<th scope="col" class="table-actions">Ações</th>
		</tr>
	</thead>
	<tfoot>
		<tr>
			<td colspan="6"><img src="images/icons/fugue/arrow-curve-000-left.png" width="16" height="16" class="picto"><b>Total:</b> <%= (@empresas.size-1) %> cadastros encontrados</td>
			<!-- ><td><a href="#" class="button"><img src="images/icons/fugue/cross-circle.png" width="16" height="16"> delete all</a></td> -->
		</tr>
	</tfoot>
	<tbody>
		<% @empresas_disponiveis.each do |empresa| %>
		<tr>
			<!-- ><th scope="row" class="table-check-cell"><input type="checkbox" name="selected[]" id="table-selected-1" value="1"></th> -->
			<td><%= empresa.id %></td>
			<td>
			<ul class="keywords">
				<li>
					<%= empresa.nome %>
				</li>
			</ul></td>
			
			<td><%= image_tag(empresa.empresa_logomarca.thumb('100x100').url, :alt=>"") if empresa.empresa_logomarca %></td>
			<!-- The class table-actions is designed for action icons -->
			<td class="table-actions"> 
			<%= link_to image_tag("/images/icons/fugue/pencil.png"), edit_empresa_path(empresa), :title =>"Edit", :class => "with-tip" %>
			<%= link_to image_tag("/images/icons/fugue/cross-circle.png"), empresa, confirm: 'Tem certeza que deseja apagar a empresa ' + empresa.nome + '?' , method: :delete, :title =>"Delete", :class => "with-tip" %> </td>
		</tr>
		<% end %>
	</tbody>
</table>










<br />

<%= link_to 'Nova Empresa', new_empresa_path, :class => "button" %>
